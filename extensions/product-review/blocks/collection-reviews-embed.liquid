{% comment %}
  App embed block to inject product review summaries on collection pages.
  This script will dynamically find product cards and inject review summaries.
{% endcomment %}

{%- liquid
  render 'collection-product-reviews'
-%}

{% schema %}
{
  "name": "Collection Reviews Embed",
  "target": "body",
  "templates": ["collection"],
  "settings": [
    {
      "type": "paragraph",
      "content": "This block adds review summaries to product cards on collection pages. No configuration is needed."
    }
  ]
}
{% endschema %}